extends layout

block content
	h1 
		a(href="/reviews/top/places") Top des reviews

	h1 Ajouter une review

	form(method='POST' action='/reviews')
		legend Name
			input(id='name', type='text', name="name")
		legend PlaceType
			input(id='placeType', type='text', name="placeType")
		legend Stars
			input(id='stars', type='text', name="stars")
		input(type='submit', value='Add')

	p Liste des reviews

	if reviews
		table
			each review in reviews
				tr
					td
						a(href='/reviews/' + review._id) +
						td= review.name
						td= review.placeType
						td
							- for (var x = 0; x <  review.stars; x++)
								i.fa.fa-star
						td
							a.fa.fa-trash-o(onClick='deleteReview("#{review._id}")')





